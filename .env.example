# ===================================
# ENVIRONMENT FILE TEMPLATE
# ===================================
# Copy this file to:
# - .env.dev (for development)
# - .env.sandbox (for sandbox)
# - .env.prod (for production)
# 
# IMPORTANT: Never commit actual .env files to Git!
# ===================================

# Application
NODE_ENV=local
APP_PORT=3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=change_this_password
DB_DATABASE=nestjs_product_db

# TypeORM Configuration
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=true
TYPEORM_MIGRATIONS_RUN=false

# JWT Configuration
JWT_SECRET=change_this_secret_key_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=change_this_refresh_secret_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=7d
